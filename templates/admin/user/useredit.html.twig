{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

    <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
    </ol>
    <div class="col-md-9">
    <div class="card">
    <div class="card-body">
    <div class="row">
        <div class="col-md-12">
            <h4>Gegevens updaten</h4>
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
{{ form_start(form)}}
            <div class="form-group row">
                <label for="publicinfo" class="col-4 col-form-label">Username</label>
                <div class="col-8">
                    {{ form_widget(form.Username, {'attr': {'class': 'form-control here'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <label for="publicinfo" class="col-4 col-form-label">Email</label>
                <div class="col-8">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control here'}}) }}
                </div>
            </div>
            <div class="form-group row">
                <label for="publicinfo" class="col-4 col-form-label">Wachtwoord</label>
                <div class="col-8">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control here'}}) }}
                </div>
            </div>
            <button type="submit" class="btn btn-outline-primary">Update</button>
            <input type="button" value="Terug" class="btn btn-outline-success"  onclick="history.back()" />
            {{ form_end(form) }}
    </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}