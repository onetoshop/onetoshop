{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

    <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Project</li>
        <li class="breadcrumb-item active">Edit Project</li>
    </ol>
    <!-- Page Content -->
    <h1>Edit Project</h1>
    <!-- DataTables Example -->
    <div class="form-element-area">
        <div class="container">
            <div id="row">
                <div class="col-xs-12">
                    <div class="form-element-list">
                        <div class="basic-tb-hd">
                            <div class="cmp-tb-hd">
                                <div class="cmp-tb-hd">
                                    <div>
                                        {{ form_start(form) }}
                                        <p><h3>Foto</h3></p>
                                        <p class="font-weight-light">Hier komt een foto van de website van het bedrijf (formaat: breedte 1800px bij hoogte 800px)</p>
                                        {{ form_row(form.images) }}
                                        <img class="img-fluid rounded mb-4 mb-lg-0" src="{{ asset('/image/images/' ~ project.images.name) }}" alt="">


                                        <p><h3>Titel</h3></p>
                                        <p class="font-weight-light">Hier komt de naam van het bedrijf bijvoorbeeld: GorillaGirp</p>
                                        {% form_theme form.title 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.title) }}

                                        <p><h3>Body</h3></p>
                                        <p class="font-weight-light">Volledige informatie over het project</p>
                                        {% form_theme form.body 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.body) }}

                                        <p><h3>Naam</h3></p>
                                        <p class="font-weight-light">Hier komt de naam van het bedrijf bijvoorbeeld: GorillaGirp</p>
                                        {% form_theme form.naam 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.naam) }}
                                            <hr>
                                            <button type="submit" style="width: 100%;" class="btn btn-primary">Edit Project!</button>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}