{% extends 'admin/adminbase.html.twig' %}


{% block body %}

    <div id="content-wrapper">

    <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Nieuwsbrief</li>
    </ol>
    <!-- Page Content -->
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-address-card" ></i>
            Nieuwsbrief aanmeldingen
            <a href="{{ path('nieuwsbriefaanmaken') }}" type="button" class="btn btn-primary" style="float: right;">Nieuwsbrief maken</a>
        </div>
        <div class="table-responsive">
            {% if gegeven %}
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Emailadres</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for gegeven in gegeven %}
                        <tr>
                            <td>{{ gegeven.id}}</td>
                            <td>{{ gegeven.email}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Niks gevonden om weer te geven.</p>
            {% endif %}

        </div>

    </div>
{% endblock %}