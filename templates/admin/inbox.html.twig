{% extends 'admin/adminbase.html.twig' %}


{% block body %}

<div id="content-wrapper">

    <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Inbox</li>
    </ol>
    <!-- Page Content -->
    <h1>Inbox</h1>
    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="table-responsive">
            {% if gegeven %}
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Afzender</th>
                        <th>Onderwerp</th>
                        <th></th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for gegeven in gegeven %}
                        <tr>
                            <td>{{ gegeven.email}}</td>
                            <td>{{ gegeven.onderwerp }}</td>
                            <td>
                                <a href="{{ path('show_mail', {'slug' : gegeven.id}) }}" class="btn btn-success" style="width: 100%;">Lees</a>
                            </td>
                            <td>
                                <a href="{{ path('delete_mail', {'id' : gegeven.id}) }}" class="btn btn-danger" style="width: 100%;">Verwijder</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Niks gevonden om weer te geven.</p>
            {% endif %}

    </div>

</div>
{% endblock %}