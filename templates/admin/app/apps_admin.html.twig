{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Apps</li>
            </ol>
            <!-- Page Content -->
            <h1>Apps Overzicht</h1>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <a href="{{ path('apps_toevoegen') }}" type="button" class="btn btn-primary" style="float: right;">Voeg Koppeling Toe</a>
                </div>
                <div class="table-responsive">
                    {% if apps %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Koppeling</th>
                                <th style="width: 40%">Beschrijving</th>
                                <th>Bekijken</th>
                                <th>Bewerken</th>
                                <th>verwijderen</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for apps in apps %}
                                <tr>
                                    <td>{{ apps.id }}</td>
                                    <td>{{ apps.naam }}</td>
                                    <td>
                                        {% if apps.beschrijving is defined  %}
                                            {% for i in [1,][0:239] %}
                                                {{ apps.beschrijving [0:239] | raw }}...
                                            {% endfor %}
                                        {% else %}
                                            <p>Er is geen beschrijving gevonden</p>
                                        {% endif %}
                                    </td>
                                    <td><a style="width: 100%;" href="{{ path('apps_slug_admin', {'slug' : apps.slug} ) }}"  class="btn btn-outline-dark">Bekijken</a></td>
                                    <td><a style="width: 100%;" href="{{ path('edit_apps', {'id' : apps.id} ) }}"  class="btn btn-outline-primary">Bewerken</a></td>
                                    <td><a class="btn btn-outline-danger" href="" data-toggle="modal" data-target="#delete" style="width: 100%;">Verwijderen
{#                                        {{ dump(apps) }}#}
                                        </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Niks gevonden om weer te geven.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% for apps in apps %}
    <!-- Logout Modal-->
    <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Zeker weten?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Weet u zeker dat u <b>{{ apps.naam }}</b> wilt verwijderen?</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuleer</button>
                    <a class="btn btn-primary"  href="{{ path('delete_apps', {'id' : apps.id}) }}">Verwijderen</a>
                    {{ dump(apps) }}
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}