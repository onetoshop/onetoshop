{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Apps</li>
            </ol>
            <!-- Page Content -->
            <h1>Apps Show</h1>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-address-card"></i>
                    Card
                    <a href="{{ path('add_apps') }}" type="button" class="btn btn-primary" style="float: right;">Add Apps</a>
                </div>
                <div class="table-responsive">
                    {% if apps %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>title</th>
                                <th>Show</th>
                                <th>Edit</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for apps in apps %}
                                <tr>
                                    <td>{{ apps.id }}</td>
                                    <td>{{ apps.title }}</td>
                                    <td>
                                        <a href="{{ path('show_apps', {'slug' : apps.title}) }}" class="btn btn-outline-dark" style="width: 100%;">Tonen</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('edit_apps', {'id' : apps.id}) }}" class="btn btn-outline-primary" style="width: 100%;">Bewerken</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Niks gevonden om weer te geven.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}