{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">App</li>
            </ol>
            <!-- Page Content -->
            <h1>App Show</h1>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fas fa-address-card"></i>
                    Card
                    <a href="{{ path('add_app') }}" type="button" class="btn btn-primary" style="float: right;">Add App</a>
                </div>
                <div class="table-responsive">
                    {% if app1 %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Naam</th>
                                <th>Show</th>
                                <th>Edit</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for app1 in app1 %}
                                <tr>
                                    <td>{{ app1.id }}</td>
                                    <td>{{ app1.naam }}</td>
                                    <td>
                                        <a href="{{ path('show_app', {'slug' : app1.naam}) }}" class="btn btn-outline-dark" style="width: 100%;">Tonen</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('edit_app', {'id' : app1.id}) }}" class="btn btn-outline-primary" style="width: 100%;">Bewerken</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Niks gevonden om weer te geven.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}