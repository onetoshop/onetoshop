{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">
    <div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Appinformatie</li>
        <li class="breadcrumb-item active">Add Appinformatie</li>
    </ol>
    <!-- Page Content -->
    <h1>Add Appinformatie</h1>
    <!-- DataTables Example -->
    <div class="form-element-area">
        <div class="container">
            <div id="row">
                <div class="col-xs-12">
                    <div class="form-element-list">
                        <div class="basic-tb-hd">
                            <div class="cmp-tb-hd">
                                <div class="cmp-tb-hd">
                                    <div style="text-align: center;">
                                        {{ form_start(form) }}
                                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                                        <p><h3>Titel</h3></p>
                                        <p class="font-weight-light">Naam van de koppeling die bij app is aangemaakt</p>
                                        {{ form_row(form.title) }}

                                        <p><h3>Body</h3></p>
                                        <p class="font-weight-light">Informatie over de koppeling</p>
                                        {{ form_row(form.body) }}

                                        <p><h3>Groep</h3></p>
                                        <p class="font-weight-light">Hier kies je bij welke koppeling deze pagina hoort</p>
                                        {{ form_row(form.groep) }}
                                        <hr>
                                        <button type="submit" style="width: 100%;" class="btn btn-primary">Add Appinformatie!</button>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}