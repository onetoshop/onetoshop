{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Apps</li>
            </ol>
            <!-- Page Content -->
            <h1>Apps Overzicht</h1>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <a href="#" type="button" class="btn btn-primary" style="float: right;">Voeg Koppeling Toe</a>
                </div>
                <div class="table-responsive">
                    {% if apps %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Titel</th>
                                <th>Naam</th>
                                <th>Parent ID</th>
                                <th>Bekijken</th>
                                <th>Bewerken</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for apps in apps %}
                                <tr>
                                    <td>{{ apps.id }}</td>
                                    <td>{{ apps.naam }}</td>
                                    <td>{{ apps.apps.id }}</td>
                                    <td><a style="width: 100%;" href="{{ path('apps_slug', {'slug' : apps.slug} ) }}"  class="btn btn-outline-primary">Bekijken</a></td>
                                    <td>bewerken</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Niks gevonden om weer te geven.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}