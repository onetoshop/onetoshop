{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">
{#       TODO: verander Koppeling in in een dynamics naam vanuit de database#}

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">
                    <a href="{{ path('apps_admin') }}">Apps</a>
                </li>
        <li class="breadcrumb-item active">Koppeling</li>

            </ol>
            <!-- Page Content -->
        <h1>Koppeling</h1>
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <a href="#" type="button" class="btn btn-primary" style="float: right;">Voeg Informatie Aan Koppeling Toe</a>
                </div>
                <div class="table-responsive">
                    {% if apps %}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Naam</th>
                                <th>Parent ID</th>
                                <th style="width: 40%;">Beschrijving</th>
                                <th>Bewerken</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for app in apps %}
                                <tr>
                                    <td>{{ app.id }}</td>
                                    <td>{{ app.naam }}</td>
                                    <td>{{ app.apps.naam }}</td>
                                    <th>
                                        {% for i in [1,][0:239] %}
                                            {{ app.beschrijving [0:239] | raw }}...
                                        {% endfor %}
                                    </th>
                                    <td>
                                        <a style="width: 100%;" href="#"  class="btn btn-outline-primary">Bewerken</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <p>Er is geen informatie gevonden.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}