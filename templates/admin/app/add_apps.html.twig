{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

    <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">App</li>
        <li class="breadcrumb-item active">Add Apps</li>
    </ol>
    <!-- Page Content -->
    <h1>Add Apps</h1>
    <!-- DataTables Example -->
    <div class="form-element-area">
        <div class="container">
            <div id="row">
                <div class="col-xs-12">
                    <div class="form-element-list">
                        <div class="basic-tb-hd">
                            <div class="cmp-tb-hd">
                                <div class="cmp-tb-hd">
                                    <div style="text-align: center;">
                                        {{ form_start(form) }}
                                        <p><h3>Foto</h3></p>
                                        <p class="font-weight-light">logo van het bedrijf waar het over gaat</p>
                                        {{ form_row(form.image) }}

                                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                                        <p><h3>Title</h3></p>
                                        <p class="font-weight-light">Naam van het bedrijf bijvoorbeeld: PayPal</p>
                                        {{ form_row(form.title) }}

                                        <p><h3>Body</h3></p>
                                        <p class="font-weight-light">Informatie over het bedrijf bijvoorbeeld: PayPal</p>
                                        {{ form_row(form.body) }}

                                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                                        <p><h3>Groep</h3></p>
                                        <p class="font-weight-light">Hier komt de naam van de groep waar dit kaartje bij hoord bijvoorbeeld: betaalkoppelingen</p>
                                        {{ form_row(form.groep) }}

                                        {% form_theme form 'bootstrap_4_layout.html.twig' %}
                                        <p><h3>Naam</h3></p>
                                        <p class="font-weight-light">Hier komt nog een keer de naam van het bedrijf alleen dan zonder hoofdletters bijvoorbeeld: paypal</p>
                                        {{ form_row(form.naam) }}

                                        <hr>
                                        <button type="submit" style="width: 100%;" class="btn btn-primary">Add Apps!</button>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}