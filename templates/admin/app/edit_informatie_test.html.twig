{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div id="content-wrapper">

    <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">
            <a href="{{ path('apps_admin') }}">koppelingen Overzicht</a>
        </li>
        <li class="breadcrumb-item active">Koppeling Bewerken</li>
    </ol>
    <!-- Page Content -->
    <h1>Koppeling Bewerken</h1>
    <!-- DataTables Example -->
    <div class="form-element-area">
        <div class="container">
            <div id="row">
                <div class="col-xs-12">
                    <div class="form-element-list">
                        <div class="basic-tb-hd">
                            <div class="cmp-tb-hd">
                                <div class="cmp-tb-hd">
                                    <div>
                                        {{ form_start(form) }}

                                        <p><h3>Naam</h3></p>
                                        <p class="font-weight-light">Voer hier de naam in van  de nieuwe koppeling die je wil toevoegen denk hierbij bijvoorbeeld aan: betaalkkoppeling.</p>
                                        {% form_theme form.naam 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.naam) }}

                                        <p><h3>Beschrijving</h3></p>
                                        <p class="font-weight-light">Voer hier de beschrijving die bij de koppeling hoord.</p>
                                        {{ form_row(form.beschrijving) }}


                                        <h3>Foto</h3>
                                        <p class="font-weight-light">Kies een foto</p>
                                        {% form_theme form.images 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.images) }}


                                        {% if apps %}
                                            <img src="{{ asset('/image/images/' ~ apps.images.name) }}" style="width: 50%;"/>

                                        {% endif %}

                                        <p><h3>Parent</h3></p>
                                        <p class="font-weight-light">Hier word aangegeven waar de koppeling bijhoord verander indien mogenlijk is.</p>
                                        {% form_theme form.parent 'bootstrap_4_layout.html.twig' %}
                                        {{ form_row(form.parent) }}



                                        <hr>
                                        <button type="submit" style="width: 100%;" class="btn btn-primary">koppeling bewerken</button>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}