{% extends 'admin/adminbase.html.twig' %}
{% block body %}
    <style>body {font-family: Arial, Helvetica, sans-serif;}
        * {box-sizing: border-box;}

        input1[type=text], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }
        p.parajessep{

            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }
        p.parajesse2p{

            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }


        .container {
            border-radius: 5px;
            background-color: white;
            padding: 20px;
        }</style>
    <div id="content-wrapper">

        <div class="container-fluid">

            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin') }}">Dashboard</a>
                </li>
                <li class="breadcrumb-item active">Mail</li>
            </ol>

                {% if app1 %}
                    {% for app1 in app1 %}
                        <div class="col-md-9">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4>Bericht</h4>
                                            <hr>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form>
                                                <div class="form-group row">
                                                    <label for="username" class="col-4 col-form-label">Gebruikersnaam</label>
                                                    <div class="col-8">
                                                        <input id="username" name="username"  value="{{app1.voornaam}}" class="form-control here" required="required" readonly >
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="name" class="col-4 col-form-label">Voornaam</label>
                                                    <div class="col-8">
                                                        <input id="name" name="name" value="{{app1.achternaam}}"  class="form-control here" type="text" readonly>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label for="email" class="col-4 col-form-label">Email</label>
                                                    <div class="col-8">
                                                        <input id="email" name="email" value="{{app1.email}}"  class="form-control here" required="required" type="text" readonly>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="email" class="col-4 col-form-label">Onderwerp</label>
                                                    <div class="col-8">
                                                        <input id="email" name="email" value="{{app1.onderwerp}}"  class="form-control here" required="required" type="text" readonly>
                                                    </div>
                                                </div>
                                                <div class="form-group row">
                                                    <label for="publicinfo" class="col-4 col-form-label">Bericht</label>
                                                    <div class="col-8">
                                                        <textarea id="publicinfo" name="publicinfo"  cols="40" rows="4" class="form-control" readonly> {{ app1.bericht }}</textarea>
                                                    </div>
                                                </div>
                                                <a href="{{ path('inbox') }}"><button type="button" class="btn btn-outline-dark" >Ga Terug</button></a>
                                                <a href="{{ path('reply_mail', {'id' : app1.id}) }}" class="btn btn-outline-primary">Reageren</a>
                                                <a href="{{ path('delete_mail', {'id' : app1.id}) }}" class="btn btn-outline-danger" >Verwijder</a>
                                            </form>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        </div>
                        </div>
{#                        </div>#}



                    {% endfor %}
                {% else %}
                    <p>Er Zijn Geen Gegevens Gevonden!</p>
                {% endif %}

            </div>

        </div>
    </div>
{% endblock %}