{% extends 'admin/adminbase.html.twig' %}


{% block body %}

    <div id="content-wrapper">

    <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('admin') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Aanmeldingen</li>
    </ol>

    <h1>Aanmeldingen</h1>
    <hr>
    <!-- DataTables Example -->
    <div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Aanmeldingen</div>
    <div class="card-body">
        <div class="table-responsive">
            {% if aanmeldingen %}
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Voornaam</th>
                        <th>Achternaam</th>
                        <th>Telefoonnumer</th>
                        <th>Doel</th>
                        <th>Contact opnemen</th>
                        <th>Email</th>
                        <th>Voorkeur</th>

                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Voornaam</th>
                        <th>Achternaam</th>
                        <th>Telefoonnumer</th>
                        <th>Doel</th>
                        <th>Contact opnemen</th>
                        <th>Email</th>
                        <th>Voorkeur</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for aanmeld in aanmeldingen %}
                        <tr>
                            <td>{{ aanmeld.voornaam }}</td>
                            <td>{{ aanmeld.achternaam }}</td>
                            <td>{{ aanmeld.telefoon }}</td>
                            <td>{{ aanmeld.doel }}</td>
                            <td>{{ aanmeld.contact }}</td>
                            <td>{{ aanmeld.email }}</td>
                            <td>{{ aanmeld.voorkeur }}</td>
                            {#                                    <td>#}
                            {#                                        <a href="#" class="btn btn-success">Show</a>#}
                            {#                                        <a href="#" class="btn btn-light">Edit</a>#}
                            {#                                        <a href="#" class="btn btn-danger">Delete</a>#}
                            {#                                    </td>#}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>Niks gevonden om weer te geven.</p>
            {% endif %}
        </div>
        <h1>Aanmelding toevoegen</h1>
        {{ form_start(form) }}
        {{ form_end(form) }}
    </div>
    </div>
    </div>
    </div>


{% endblock %}