{#        </li>#}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('aanmeldingen') }}">
                <i class="fas fa-fw fa-table"></i>
                <span>Aanmeldingen</span></a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-fw fa-book"></i>
                <span>Functionaliteit</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <h6 class="dropdown-header">Opties:</h6>
                <a class="dropdown-item" href="{{ path('functionaliteitcardadmin') }}">Functionaliteit main</a>
                <a class="dropdown-item" href="{{ path('functionaliteitinfoadmin') }}">Functionaliteit info</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('apps_admin') }}">
                <i class="fas fa-fw fa-apple-alt"></i>
                <span>Apps</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('project_overzicht') }}">
                <i class="fa fa-pencil-square-o"></i>
                <span>Project</span></a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-fw fa-blog"></i>
                <span>Blog</span>
            </a>
            <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                <h6 class="dropdown-header">Opties:</h6>
                <a class="dropdown-item" href="{{ path('blogoverzicht') }}">Blogs bekijken</a>
                <a class="dropdown-item" href="{{ path('add_blog') }}">Blog aanmaken</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('inbox') }}">
                <i class="fas fa-fw fa-inbox"></i>
                <span>Inbox</span></a>
