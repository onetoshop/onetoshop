    <!-- Core plugin JavaScript-->
    <script type="text/javascript" src="../../../../../../adminmap/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script type="text/javascript" src="../../../../../../adminmap/chart.js/Chart.min.js"></script>
    <script type="text/javascript" src="../../../../../../adminmap/datatables/jquery.dataTables.js"></script>
    <script type="text/javascript" src="../../../../../../adminmap/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script type="text/javascript" src="../../../../../../jsadmin/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script type="text/javascript" src="../../../../../../jsadmin/demo/datatables-demo.js"></script>
    <script type="text/javascript" src="../../../../../../jsadmin/demo/chart-area-demo.js"></script>
{% endblock %}
</body>
</html>