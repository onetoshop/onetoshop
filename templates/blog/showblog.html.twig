{% extends 'base1.html.twig' %}
{% block navbar %}

    <div class="col-12 col-md-10 d-none d-xl-block">
        <nav class="site-navigation position-relative text-right" role="navigation">

            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <li><a href="{{ path('home') }}" class="nav-link">Home</a></li>
                <li><a href="{{ path('functionaliteit') }}" class="nav-link">Functonaliteit</a></li>
                <li><a href="{{ path('apps') }}" class="nav-link">Apps</a></li>
                <li><a href="{{ path('blogs') }}" class="nav-link active">Blogs</a></li>
            </ul>
        </nav>
    </div>

{% endblock %}
{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-10 offset-1"style="" >
                <br>
                <br>
                <br>
                {% if blogs %}
                {% for blogs in blogs %}
                <!-- Title -->
                <h1 class="mt-4">{{ blogs.title }}</h1>


                <hr>

                <!-- Preview Image -->
                <img class="img-fluid rounded mb-4 mb-lg-0 offset-2"  style="text-align: center" src="{{ asset('/image/blog/' ~ blogs.image) | imagine_filter('big') }}" />
                <hr>

                <!-- Post Content -->
                <p class="lead">{{ blogs.beschrijving }}</p>

                <p>{{ blogs.body | raw }}</p>


                <hr>


                        {% endfor %}
                        {% else %}
                            <p>Er zijn Geen Gegevens gevonden</p>
                        {% endif %}
                    </div>
                </div>


            </div>

{% endblock %}