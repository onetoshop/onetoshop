{% extends 'base1.html.twig' %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Post Content Column -->
            <div class="col-lg-8">
                <br>
                <br>
                <br>
                {% if blogs %}
                {% for blogs in blogs %}
                <!-- Title -->
                <h1 class="mt-4">{{ blogs.title }}</h1>


                <hr>

                <!-- Preview Image -->
                <img class="img-fluid rounded mb-4 mb-lg-0" src="{{ asset('/image/blog/' ~ blogs.image) | imagine_filter('big') }}" />
                <hr>

                <!-- Post Content -->
                <p class="lead">{{ blogs.beschrijving }}</p>

                <p>{{ blogs.body | raw }}</p>


                <hr>


                        {% endfor %}
                        {% else %}
                            <p>Er zijn Geen Gegevens gevonden</p>
                        {% endif %}
                    </div>
                </div>

            </div>

{% endblock %}