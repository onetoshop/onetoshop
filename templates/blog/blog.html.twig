{% extends 'base1.html.twig' %}

{% block title %}
    <title>Onetoshop | E-commerce Blog</title>
{% endblock %}

{% block navbar %}

    <div class="col-12 col-md-9 d-none d-xl-block">
        <nav class="site-navigation position-relative text-right" role="navigation">

            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <a href="{{ path('home') }}" class="nav-link">Home</a>
                <a href="{{ path('functionaliteit') }}" class="nav-link">Functonaliteit</a>
                <a href="{{ path('apps') }}" class="nav-link">Apps</a>
                <a href="{{ path('blogs') }}" class="nav-link active">Blogs</a>
            </ul>
        </nav>
    </div>

{% endblock %}
{% block body %}
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">
                <h1 class="my-4">Blogs
                </h1>
                <!-- Blog Post -->
                {% if blogs %}
                {% for blog in blogs %}
                    <div class="my-4">
                    {% if blog.images is defined %}
                        <img style="padding: 1.25rem" class="img-fluid rounded" src="{{ asset('/image/images/' ~ blog.images.name) | imagine_filter('medium') }}" alt="">
                    {% endif %}
                    <div class="card-body">
                        <h2 class="card-title">{{ blog.title }}</h2>
                        <p class="card-text">{{ blog.beschrijving | raw }}</p>
                        <a style="width: 100%;" href="{{ path('blogshow', {'slug' : blog.slug}) }}"  class="btn btn-outline-primary">Lees Verder</a>
                    </div>
                </div>
                {% endfor %}
                {% else %}
                    <p>Er zijn Geen Gegevens gevonden</p>
                {% endif %}
            </div>

            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">

                <div class="card my-4">
                    <h5 class="card-header">Zoek</h5>
                    <div class="card-body">
                        <div class="container h-100">
                            <div class="d-flex justify-content-center h-100">
                                <div class="searchbar">
                                    {{ form_start(form) }}
                                    {{ form_widget(form.Zoek, {'attr': {'class': 'search_input'}}) }}
                                    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-secondary'}}) }}

                                    {{ form_end(form) }}
{#                                    <input class="search_input" type="text" name="" placeholder="Search...">#}
{#                                    <a href="#" class="search_icon"></a>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                        </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.row -->

    </div>
    <!-- /.container -->


{% endblock %}