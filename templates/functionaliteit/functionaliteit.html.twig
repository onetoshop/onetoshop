{% extends 'base1.html.twig' %}

{% block title %}<title>Daarom Onetoshop! | Onetoshop</title>{% endblock %}

{% block navbar %}
    <div class="col-12 col-md-10 d-none d-xl-block">
        <nav class="site-navigation position-relative text-right" role="navigation">


            <div class="aeigenstyle">
            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                <a href="{{ path('home') }}" class="nav-link">Home</a>
                <a href="{{ path('functionaliteit') }}" class="nav-link active">Functonaliteit</a>
                <a href="{{ path('apps') }}" class="nav-link ">Apps</a>
                <a href="{{ path('blogs') }}" class="nav-link ">Blogs</a>
            </ul>
            </div>
        </nav>
    </div>

{% endblock %}
{% block body %}
<div class="" id="contact-section">
    <!-- Page Content -->
    <div class="container">
        <!-- Heading Row -->
        <div class="row align-items-center my-5">
            <!-- /.col-lg-8 -->
            <div class="col-12">
                {% if functionaliteitinformatie %}
                    {% for functionaliteitinformatie in functionaliteitinformatie %}
                        {{ functionaliteitinformatie.body | raw }}
                    {% endfor %}
                {% else %}
                    <p>Er Zijn Geen Gegevens Gevonden!</p>
                {% endif %}

                    </div>
                    </div>

        <!-- Content Row -->
        <br>
        <div class="row">
            {% if functionaliteit %}
                {% for functionaliteit in functionaliteit %}
                    <div class="col-md-4 mb-5">
                        <div class="card h-100">
                            <div class="card-body">
                                <h3 class="card-title" style="text-align: center;">{{ functionaliteit.naam | raw }}</h3>
                            </div>
                            <div class="card-footer">
                                <a style="width: 100%;" href="{{ path('functionaliteitinfo', {'slug' : functionaliteit.url}) }}"  class="btn btn-outline-primary">Lees Verder</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Er Zijn Geen Gegevens Gevonden!</p>
            {% endif %}
            <!-- /.col-md-4 -->
        </div>
        <!-- /.row -->
    </div>
</div>
{% endblock body %}

