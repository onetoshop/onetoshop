                            <div class="card-container">
                                <div class="card">
                                    <div class="front">
                                        <div class="cover">
                                            {% if card.bgimage is defined %}
                                                <img src="{{ asset('/image/card/' ~ card.bgimage.name) }}"/>
                                            {% endif %}
                                        </div>
                                        <div class="user">
                                            {% if card.frimage is defined %}
                                                <a href="{{ card.link }}" target="_blank">
                                                <img src="{{ asset('/image/card/' ~ card.frimage.name) }}"/>
                                            {% endif %}
                                            <a href="{{ card.link }}" target="_blank">
                                            </a>
                                        </div>
                                        <div class="content">
                                            <div class="main">
                                                <h3 class="name">{{ card.title }}</h3>
                                                <p class="profession">{{ card.customer }}</p>
                                                <p class="text-center">{{ card.body }}</p>
                                            </div>
                                        </div>
                                    </div> <!-- end front panel -->
                                    <div class="back">
                                        <div class="header">
                                            <h2 class="motto">{{ card.title }}</h2>
                                        </div>
                                        <div class="content">
                                            <div class="main">
                                                <p class="text-center">Ga naar direct naar de website!</p>
                                                <p class="text-center"><a href="{{ card.link }}" target="_blank">{{ card.link }}</a></p>
                                            </div>
                                        </div>
                                        <div class="footer">
                                            <div class="social-links text-center">
                                                {{ card.footer | raw }}
                                            </div>
                                        </div>
                                    </div> <!-- end back panel -->
                                </div> <!-- end card -->
                            </div> <!-- end card-container -->
                            <div>
                            </div>
